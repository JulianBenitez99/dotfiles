#!/bin/bash
# Check out https://gist.github.com/bashbunni/f6b04fc4703903a71ce9f70c58345106

usage () {
    cat <<EOF
USAGE: pomodoro.sh [OPTION] [work|rest]
  Options: 
    -h Print this help message
    -t Timer time (default: 25m work | 5m rest)
EOF
}

work() {
  TIME="${TIME:-"25m"}"
  timer $TIME && terminal-notifier -message 'Pomodoro' \
    -title 'Work Timer is up!' \
    -sound 'Glass'
}

rest() {
  TIME="${TIME:-"5m"}" 
  timer $TIME && terminal-notifier -message 'Pomodoro' \
    -title 'Break is Over!' \
    -sound 'Ping'
}


while getopts "ht:" option; do
  case "${option}" in
    t)
      TIME="$OPTARG"
      ;;
    h)
      usage
      exit
      ;;
    *)
      echo "Invalid option: -$OPTARG"
      usage
      exit 1
      ;;
  esac
done
shift $((OPTIND -1))

while [[ $# -gt 0 ]]
do
  case $1 in
    work)
      work
      exit
      ;;
    rest)
      rest
      exit
      ;;
    *)
      echo "Invalid $1 option"
      usage
      exit 1
      ;;
  esac
  shift
done

